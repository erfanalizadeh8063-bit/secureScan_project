PORT=8080
RUST_LOG=info

# DATABASE_URL example
# The backend reads the connection string from the environment variable
# `DATABASE_URL`. Create a file named `.env` in this folder with a real
# connection string before running the backend locally. Do NOT commit
# real credentials to version control.
#
# Example for docker-compose (service name `db`):
# DATABASE_URL=postgres://postgres:postgres@db:5432/securascan
#
# Example for local Postgres on your machine (replace password as needed):
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/securascan

JOB_MAX_RETRIES=3
JOB_RETRY_DELAY_MS=3000
ALLOWED_ORIGINS=http://localhost:5173
BIND_ADDR=0.0.0.0:8080
